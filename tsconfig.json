{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "sourceMap": true,
        "removeComments": true,
        "checkJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": ["src/**/*.ts", "src/**/*.js", "src/types/**/*.d.ts"],
    "exclude": ["node_modules"]
}
